%h1
  = t '.title'

= form_tag books_path, method: 'get', id: 'search-form' do
  = text_field_tag :search, params[:search], placeholder: t('.search_box')
  = submit_tag t('.search_button'), name: nil
= link_to t('.add_book'), new_book_path

%table
  - @books.each do |book|
    %tr
      %td
        = image_tag book.cover.thumb.url
      %td
        = link_to book.title, book_path(book.id)
      %td
        = book.authors
= will_paginate @books
