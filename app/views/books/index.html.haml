.container
  - if @books.any?
    %table
      - @books.each do |book|
        %tr
          %td
            = image_tag book.cover.thumb.url
          %td
            = link_to book.title, book_path(book.id)
          %td
            = book.authors
    = will_paginate @books
  - else
    There no book yet :(
